@{
    Layout = "~/Views/Shared/_Pages.cshtml";
}
@session Scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/cadastros/diascondicaopagamento.js")"></script>
}
<form action="/" method="post" class="form-horizontal">
    <fieldset>
        <legend>Dias Condicao Pagamento</legend>
    @Html.Hidden("ID_DICP")
        <div class="control-group">
            <label class="control-label" for="COD_CDPG">Cod Cdpg</label>
            <div class="controls">
                @Html.EditorFor(model => model.COD_CDPG)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="DIAS_DICP">Dias Dicp</label>
            <div class="controls">
                @Html.EditorFor(model => model.DIAS_DICP)
            </div>
        </div>
    </fieldset>
</form>
