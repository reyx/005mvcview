@{
    Layout = "~/Views/Shared/_Pages.cshtml";
}
@session Scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/cadastros/unidades.js")"></script>
}
<form action="/" method="post" class="form-horizontal">
    <fieldset>
        <legend>Unidades</legend>
    @Html.Hidden("ID_UNID")
        <div class="control-group">
            <label class="control-label" for="COD_UNID">Cod Unid</label>
            <div class="controls">
                @Html.EditorFor(model => model.COD_UNID)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="DESC_UNID">Desc Unid</label>
            <div class="controls">
                @Html.EditorFor(model => model.DESC_UNID)
            </div>
        </div>
    </fieldset>
</form>
